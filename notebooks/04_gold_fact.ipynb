# Databricks notebook source
# MAGIC %md
# MAGIC ### Read Silver + Dimension tables

# COMMAND ----------

df_silver = spark.table("workspace.capstone_project.silver_crop_production")

dim_crop = spark.table("workspace.capstone_project.dim_crop")
dim_region = spark.table("workspace.capstone_project.dim_region")
dim_season = spark.table("workspace.capstone_project.dim_season")
dim_time = spark.table("workspace.capstone_project.dim_time")

# COMMAND ----------

# MAGIC %md
# MAGIC ### Join Silver With Dimension Tables

# COMMAND ----------

df_fact = (
    df_silver
    .join(dim_crop,
        df_silver.crop == dim_crop.crop_name,
        how="inner")
)

df_fact = (
    df_fact
    .join(dim_region,
        (df_fact.state == dim_region.state) &
        (df_fact.district == dim_region.district),
        how="inner")
)

df_fact = (
    df_fact
    .join(dim_season,
          df_fact.season == dim_season.season,
          how="inner")
)

df_fact = (
    df_fact
    .join(dim_time,
          (df_fact.year_start == dim_time.year_start) &
          (df_fact.year_end == dim_time.year_end),
          how="inner")
)



# COMMAND ----------

# MAGIC %md
# MAGIC ### Select final fact table schema

# COMMAND ----------

fact_crop_production = df_fact.select(
    "crop_id",
    "region_id",
    "season_id",
    "time_id",
    "area",
    "area_units",         
    "production",
    "production_units",
    "yield"
)

display(fact_crop_production)
fact_crop_production.printSchema()


# COMMAND ----------

# MAGIC %md
# MAGIC ### Write Gold fact table

# COMMAND ----------

(
    fact_crop_production.write
    .mode("overwrite")
    .format("delta")
    .saveAsTable("workspace.capstone_project.fact_crop_production")
)
